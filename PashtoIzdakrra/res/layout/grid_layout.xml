<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <Button
        android:id="@+id/nouns"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/adjectives"
        android:layout_alignBottom="@+id/adjectives"
        android:layout_alignLeft="@+id/body_parts"
        android:background="@drawable/green"
        android:text="Nouns"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/questions"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/verbs"
        android:layout_alignBottom="@+id/verbs"
        android:layout_alignLeft="@+id/nouns"
        android:background="@drawable/green"
        android:text="Questions"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/verbs"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/basic"
        android:layout_below="@+id/basic"
        android:layout_marginTop="14dp"
        android:background="@drawable/green"
        android:text="Verbs"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/adjectives"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/verbs"
        android:layout_below="@+id/verbs"
        android:layout_marginTop="16dp"
        android:background="@drawable/green"
        android:text="Adjectives"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/body_parts"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/relations"
        android:layout_alignBottom="@+id/relations"
        android:layout_alignLeft="@+id/colors"
        android:background="@drawable/green"
        android:text="Body Parts"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/relations"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/adjectives"
        android:layout_below="@+id/adjectives"
        android:layout_marginTop="16dp"
        android:background="@drawable/green"
        android:text="Relations"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/counting"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/questions"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/green"
        android:text="Counting"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/basic"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/counting"
        android:layout_alignBottom="@+id/counting"
        android:layout_alignLeft="@+id/animals"
        android:background="@drawable/green"
        android:text="Basics"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/sentences"
        android:layout_width="215dp"
        android:layout_height="60dp"
        android:layout_below="@+id/colors"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/green"
        android:text="Challenging Sentences"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/logout"
        android:layout_width="215dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/sentences"
        android:layout_below="@+id/sentences"
        android:background="@drawable/green"
        android:text="Logout"
        android:textColor="#ffffff" 
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/colors"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/sentences"
        android:layout_below="@+id/body_parts"
        android:layout_marginTop="20dp"
        android:background="@drawable/green"
        android:text="Colors"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/animals"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/colors"
        android:layout_alignBottom="@+id/colors"
        android:layout_alignRight="@+id/sentences"
        android:background="@drawable/green"
        android:text="Animals"
        android:textColor="#ffffff" />

</RelativeLayout>